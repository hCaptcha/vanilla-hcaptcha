{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "target": "es6",
    "noEmit": true,
    "strict": true,
    "alwaysStrict": true,
    "allowJs": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": ".",
    "types": [
      "@hcaptcha/types"
    ]
  },
  "files": [
    "src/index.ts"
  ],
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
